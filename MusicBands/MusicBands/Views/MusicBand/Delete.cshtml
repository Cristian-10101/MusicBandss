@model MusicBands.Models.MusicBand

@{
    ViewData["Title"] = "Borrar";
}

<h2>Borrar</h2>
<h6>Esta seguro de borrar este campo?</h6>
<hr />

<div>
    <h4>Bandas Musicales </h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">

            @Html.DisplayNameFor(Model => Model.BandName)


        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.BandName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.BandGenero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.BandGenero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.CantAlbum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Model => Model.CantAlbum)
        </dd>

    </dl>
</div>


<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="BandId" />
        <input type="submit" class="btn btn-danger" value="Borrar" />
        <a asp-action="Index" class="btn btn-warning">Volver</a>

    </form>
   
</div>
